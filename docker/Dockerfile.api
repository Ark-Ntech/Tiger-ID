FROM python:3.11-slim

WORKDIR /app

# Install system dependencies (no PostgreSQL client needed for SQLite)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Create directories for data (SQLite database, models, storage)
RUN mkdir -p /app/data/models /app/data/storage && \
    chmod -R 755 /app/data

# Copy application code
COPY . .

# Copy entrypoint script
COPY docker/entrypoint-sqlite.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Expose port
EXPOSE 8000

# Use entrypoint script
ENTRYPOINT ["/entrypoint.sh"]

# Run application
CMD ["uvicorn", "backend.api.app:app", "--host", "0.0.0.0", "--port", "8000"]
