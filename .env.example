# .env.example
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# REQUIRED - Application Configuration
# ============================================
APP_ENV=development
DEBUG=false

# ============================================
# REQUIRED - Security Keys (CHANGE IN PRODUCTION!)
# ============================================
SECRET_KEY=change-me-in-production-generate-strong-random-key
JWT_SECRET_KEY=change-me-in-production-generate-strong-random-key

# ============================================
# REQUIRED - Database Configuration (SQLite)
# ============================================
# Tiger ID uses SQLite with sqlite-vec extension for vector similarity search.
# No PostgreSQL or external database server required.

# SQLite database path (relative to project root or absolute)
DATABASE_URL=sqlite:///data/tiger_id.db

# ============================================
# OPTIONAL - External API Keys
# ============================================
# Firecrawl API (Web Scraping)
# Setup: https://firecrawl.dev/
# Sign up: https://firecrawl.dev/signup
# Dashboard: https://firecrawl.dev/dashboard
FIRECRAWL_API_KEY=
FIRECRAWL_SEARCH_ENABLED=true

# Web Search Providers
# Serper API (Google Search) - Setup: https://serper.dev/
# Tavily API - Setup: https://tavily.com/
# Perplexity API - Setup: https://www.perplexity.ai/settings/api
WEB_SEARCH_PROVIDER=firecrawl
SERPER_API_KEY=
TAVILY_API_KEY=
PERPLEXITY_API_KEY=

# USDA API
# Setup: https://www.aphis.usda.gov/
# Data Portal: https://data.aphis.usda.gov/
# Contact USDA APHIS for API access
USDA_API_KEY=
USDA_ENABLED=false

# CITES API
# Setup: https://trade.cites.org/
# API Docs: https://trade.cites.org/api/
# Most data is publicly available without API key
CITES_API_KEY=
CITES_ENABLED=false

# USFWS API
# Setup: https://api.fws.gov/
# Portal: https://www.fws.gov/
# Permits: https://www.fws.gov/birds/policies-and-regulations/permits/permits.php
USFWS_API_KEY=
USFWS_ENABLED=false

# YouTube Data API v3
# Setup: https://console.cloud.google.com/
# Enable API: https://console.cloud.google.com/apis/library/youtube.googleapis.com
# Credentials: https://console.cloud.google.com/apis/credentials
# Documentation: https://developers.google.com/youtube/v3
YOUTUBE_API_KEY=
YOUTUBE_ENABLED=false

# Meta/Facebook Graph API
# Setup: https://developers.facebook.com/
# Create App: https://developers.facebook.com/apps/
# Graph API Docs: https://developers.facebook.com/docs/graph-api
# Access Tokens: https://developers.facebook.com/tools/explorer/
META_ACCESS_TOKEN=
META_APP_ID=
META_APP_SECRET=
META_ENABLED=false

# ============================================
# OPTIONAL - Storage Configuration
# ============================================
STORAGE_TYPE=local
STORAGE_PATH=./data/storage
S3_BUCKET=
S3_REGION=

# ============================================
# OPTIONAL - Model Configuration
# ============================================
MODEL_DEVICE=cuda
BATCH_SIZE=32
MEGADETECTOR_MODEL_PATH=./data/models/md_v5a.0.0.pt
MEGADETECTOR_VERSION=v5
REID_MODEL_PATH=./data/models/tiger_reid_model.pth
EMBEDDING_DIM=512
RAPID_ENABLED=false
RAPID_MODEL_PATH=./data/models/rapid/checkpoints/model.pth
WILDLIFETOOLS_ENABLED=false
WILDLIFETOOLS_MODEL_PATH=./data/models/wildlife-tools/
WILDLIFETOOLS_MODEL_TYPE=megadescriptor
CVWC2019_ENABLED=false
CVWC2019_MODEL_PATH=./data/models/cvwc2019/checkpoints/model.pth
POSE_MODEL_PATH=./data/models/tiger_pose_model.pth

# ============================================
# OPTIONAL - Dataset Paths
# ============================================
ATRW_DATASET_PATH=./data/models/atrw/
METAWILD_DATASET_PATH=./data/datasets/metawild/
WILDLIFE_DATASETS_PATH=./data/datasets/wildlife-datasets/
INDIVIDUAL_ANIMAL_REID_PATH=./data/datasets/individual-animal-reid/

# ============================================
# OPTIONAL - Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:8501

# ============================================
# OPTIONAL - Feature Flags
# ============================================
USE_LANGGRAPH=false
MFA_ENABLED=false

# ============================================
# OPTIONAL - Monitoring
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# ============================================
# OPTIONAL - Authentication
# ============================================
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# OPTIONAL - CSRF Protection
# ============================================
ENABLE_CSRF=false
CSRF_SECRET_KEY=
CSRF_TOKEN_LIFETIME=3600

# ============================================
# OPTIONAL - SMTP Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Tiger ID
EMAIL_ENABLED=false

# ============================================
# OPTIONAL - Sentry Error Tracking
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ============================================
# OPTIONAL - Dataset Ingestion
# ============================================
# Enable automatic dataset ingestion on startup (runs in background)
INGEST_DATASETS_ON_STARTUP=false

# ============================================
# OPTIONAL - Continuous Tiger Discovery
# ============================================
# Enable continuous crawling of TPC facilities for tiger images
# Uses FREE tools only: DuckDuckGo, Playwright, OpenCV, Modal GPU
# No additional API keys required
DISCOVERY_ENABLED=false
DISCOVERY_BATCH_SIZE=20
DISCOVERY_INTERVAL_HOURS=6
DISCOVERY_MAX_FACILITIES=50








